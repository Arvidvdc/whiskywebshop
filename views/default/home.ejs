<% include ../partials/header %>

<h1>Whiskys</h1>
<div>
    <button id="sortPrice">Sorteer op prijs</button>
</div>

<div class="module-header">
    <h4 class="module-title">Onze Whiskys</h4>
</div>

<div id="articles" class="row" data-loaded="products">
    <% articles.forEach(article => { %>
        <div class="article col col-md-4" data-price="<%= article.price %>" data-Name="<%= article.name %>" data-Id="<%= article.id %>" data-image="<%= article.image %>">
            <div class="thumbnail">
                <img src="<%= article.image %>" alt="">
                <div class="caption">
                    <h4><label id="name"><%= article.name %></label></h4>
                    <span class="d-flex justify-content-end">â‚¬ <label id="price"><%= article.price.toFixed(2).replace(".",",") %></label></span>
                    <%= article.description %> <br>
                    <input type="number" id="<%= article.id %>" placeholder="0" min="1" oninput="this.value = Math.abs(this.value)"> 
                    <button type="button" name="orderBTN" value="<%= article.id %>">toevoegen</button>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>