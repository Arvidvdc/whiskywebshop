<% include ../partials/header %>

<h1>Whiskys</h1>
<div>
    <button id="sortPrice">Sorteer op prijs</button>
</div>

<div id="articles" class="row">
    <% articles.forEach(article => { %>
        <div class="article col col-md-4" data-price="<%= article.price %>">
            <div class="thumbnail">
                <img src="<%= article.image %>" alt="">
                <div class="caption">
                    <form action="" method="GET">
                        <h4><label id="name"><%= article.name %></label></h4>
                        <span class="d-flex justify-content-end">â‚¬ <label id="price"><%= article.price.toFixed(2).replace(".",",") %></label></span>
                        <%= article.description %> <br>
                        <input type="number" name="amount" placeholder="0" min="0"> 
                        <button type="submit" name="order">bestellen</button>
                    </form>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>