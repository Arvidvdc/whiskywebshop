<% include ../partials/header %>

<div class="container">
    <h1>Bestellen</h1>

    <!-- add adres form -->
    <form>
        <div class="form-group row">
            <div class="col">
                <label>Bedrijfsnaam:</label>
                <input class="form-control" name="company" type="text" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label>Voornaam:</label>
                <input class="form-control" name="firstname" type="text" placeholder="" required>
            </div>
            <div class="col">
                <label>Achternaam:</label>
                <input class="form-control" name="lastname" type="text" placeholder="" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label>Postcode:</label>
                <input class="form-control" name="zipcode" type="text" placeholder="" required>
            </div>
            <div class="col-md-2">
                <label>Huisnr & toev.</label>
                <input class="form-control" name="nr" type="text" placeholder="" required>
            </div>
            <div class="col-md-6">
                <label>Telefoonnummer (mobiel):</label>
                <input class="form-control" name="phone" type="text" placeholder="" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label>Straat:</label>
                <input class="form-control" name="street" type="text" placeholder="" required>
            </div>
            <div class="col">
                <label>Plaats:</label>
                <input class="form-control" name="city" type="text" placeholder="" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" id="addressBtn" class="btn btn-primary">Verder met bestellen</button>
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer %>